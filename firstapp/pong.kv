#:kivy 1.10.1
#design the the ball
<PongBall>:
    size: 50,50
    canvas:
        Ellipse:
            pos:self.pos
            size:self.size

<PongGame>: 
    ball: pong_ball
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0 #so pos 
            size: 10,self.height     #the wide of mline size x,y
           # this label for font size and where it should be 
    Label:              
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
    PongBall:
        id: pong_ball         #set the ball the center of map
        center: self.parent.center
